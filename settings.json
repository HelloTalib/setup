{
  ////////////////////////////////////////
  ////// Controls the Workbench///////////
  ////////////////////////////////////////
  // "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Material Theme High Contrast",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.folders.color": "#00ff00",
  "materialTheme.accent": "Bright Teal",
  "material-icon-theme.opacity": 0.7,
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
  "php.validate.executablePath": "C:\\xampplite\\php\\php.exe",
  "explorer.decorations.badges": false,
  "editor.tabCompletion": "on",
  "files.trimTrailingWhitespace": true,
  ////////////////////////////////////////////
  ////////// Controls the editor//////////////
  ////////////////////////////////////////////
  "editor.fontFamily": " Fira Code, Consolas,'Courier New', monospace",
  "editor.formatOnPaste": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 4,
  "editor.lineHeight": 24,
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "editor.insertSpaces": true,
  "editor.minimap.enabled": false,
  "editor.formatOnSave": false,
  ////////////////////////////////////////////
  //////// Controls the html format///////////
  ////////////////////////////////////////////
  "html.format.contentUnformatted": "pre,code,textarea",
  "html.format.endWithNewline": false,
  "html.format.extraLiners": "head, body, /html",
  "html.format.indentHandlebars": false,
  "html.format.indentInnerHtml": false,
  "html.format.maxPreserveNewLines": null,
  "html.format.preserveNewLines": true,
  "html.format.wrapLineLength": 80,
  "html.format.wrapAttributes": "auto",
  "git.enableSmartCommit": true,
  "window.menuBarVisibility": "toggle",
  "workbench.statusBar.visible": true,
  "breadcrumbs.enabled": false,
  "workbench.activityBar.visible": true,
  "files.autoSave": "afterDelay",
  "workbench.startupEditor": "newUntitledFile",
  "editor.renderControlCharacters": false,
  "workbench.sideBar.location": "left",
  "editor.renderWhitespace": "none",
  // Enable per-language
  "[php]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "kokororin.vscode-phpfmt"
  },
  "phpfmt.enable_auto_align": true,
  "phpfmt.psr2": false,
  "phpfmt.passes": [
    "ShortArray",
    "SpaceAroundControlStructures",
    "SpaceAroundParentheses",
    "AutoSemicolon",
    "AlignPHPCode",
    "AutoSemicolon"
  ],
  "phpfmt.exclude": ["AllmanStyleBraces"],
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "git.autofetch": true,
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "BracketSameLine": true
  },
  "files.associations": {
    "*.html": "html"
  },
  "window.zoomLevel": 0,
  "editor.accessibilitySupport": "on",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
